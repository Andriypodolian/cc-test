{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "config": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "placeholder": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "string",
                "number",
                "multiple_choices",
                "choices"
              ]
            },
            "choices": {
              "type": "array"
            },
            "required": {
              "type": "boolean"
            },
            "default": {
              "type": ["boolean", "integer", "number", "string"]
            },
            "description": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "required": ["config"]
}
